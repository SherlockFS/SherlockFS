    "version": "0.2.0",
    "configurations": [
        {
            "name": "test_main",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/test_main",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Activer l'impression en mode Pretty pour gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Définir la version désassemblage sur Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "make test_main"
        },
        {
            "name": "shlkfs_formater",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/shlkfs_formater",
            "args": [
                "${input:formatArg}"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Activer l'impression en mode Pretty pour gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
            ],
            "preLaunchTask": "make shlkfs_formater"
        },
        {
            "name": "mount",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/mount",
            "args": [
                "${input:mountDevice}",
                "${input:mountPath}"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Activer l'impression en mode Pretty pour gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
            ],
            "preLaunchTask": "make mount"
        },
        {
            "name": "shlkfs_adduser",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/shlkfs_adduser",
            "args": [
                "${input:mountDevice}",
                "${input:publicKey}",
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Activer l'impression en mode Pretty pour gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
            ],
            "preLaunchTask": "make shlkfs_adduser"
        },
    ],
    "inputs": [
        {
            "id": "formatArg",
            "description": "Fichier à shlkfs_formater",
            "type": "promptString",
            "default": "test.shlkfs"
        },
        {
            "id": "mountDevice",
            "description": "Disque à monter",
            "type": "promptString",
            "default": "test.shlkfs"
        },
        {
            "id": "mountPath",
            "description": "Point de montage",
            "type": "promptString",
            "default": "mnt"
        },
        {
            "id": "publicKey",
            "description": "Clé publique à ajouter",
            "type": "promptString",
            "default": "public.pem"
        },
    ]
}
